<Window x:Class="Social_Publisher.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Social_Publisher"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="img" Width="95" Height="100" Margin="350,76,350,0" Source="Assets/sdlogo.png" Stretch="Fill" VerticalAlignment="Top"/>
        <Label Content="Email" FontWeight="Bold" HorizontalAlignment="Left" Margin="280,0,0,0" VerticalAlignment="Center" Width="41"/>
        <TextBox x:Name="tEmail" TextWrapping="Wrap" VerticalAlignment="Center" Height="26" Margin="326,0,264,0"/>
        <Label Content="License Key" FontWeight="Bold" HorizontalAlignment="Left" Margin="244,249,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox x:Name="tKey" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Margin="326,249,264,0"/>
        <Button x:Name="bLogin" Content="Login" HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top" Width="64" Height="28" Click="bLogin_Click"/>

    </Grid>
</Window>
